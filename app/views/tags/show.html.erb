<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @tag.name %></h1>
    <div class="flex space-x-2">
      <%= link_to 'Edit', edit_tag_path(@tag), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Delete', @tag, method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back to Tags', tags_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h2 class="text-xl font-semibold mb-4">Tag Details</h2>
        <div class="space-y-4">
          <div>
            <span class="font-medium text-gray-600">Name:</span>
            <p class="text-lg"><%= @tag.name %></p>
          </div>
        </div>
      </div>

      <div>
        <h2 class="text-xl font-semibold mb-4">Usage Statistics</h2>
        <div class="space-y-4">
          <div>
            <span class="font-medium text-gray-600">Reports using this tag:</span>
            <p class="text-lg"><%= @tag.reports.count %></p>
          </div>
          <div>
            <span class="font-medium text-gray-600">Created:</span>
            <p class="text-lg"><%= @tag.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
          </div>
          <div>
            <span class="font-medium text-gray-600">Last updated:</span>
            <p class="text-lg"><%= @tag.updated_at.strftime('%B %d, %Y at %I:%M %p') %></p>
          </div>
        </div>
      </div>
    </div>

    <% if @tag.reports.any? %>
      <div class="mt-8">
        <h2 class="text-xl font-semibold mb-4">Recent Reports</h2>
        <div class="space-y-4">
          <% @tag.reports.order(created_at: :desc).limit(5).each do |report| %>
            <div class="border rounded-lg p-4">
              <%= link_to report.title, report, class: 'text-blue-600 hover:text-blue-800 font-semibold' %>
              <p class="text-gray-600 text-sm mt-1">
                <%= truncate(report.content, length: 100) %>
              </p>
              <div class="flex items-center space-x-2 mt-2">
                <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded">
                  <%= report.emotion&.name || 'No emotion' %>
                </span>
                <% report.tags.each do |tag| %>
                  <span class="bg-gray-100 text-gray-800 text-sm font-medium px-2.5 py-0.5 rounded">
                    <%= tag.name %>
                  </span>
                <% end %>
              </div>
              <p class="text-gray-500 text-xs mt-2">
                <%= time_ago_in_words(report.created_at) %> ago
              </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
