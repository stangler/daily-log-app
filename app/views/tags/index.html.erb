<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">My Tags</h1>

  <%= link_to 'New Tag', new_tag_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-8 inline-block' %>

  <% if @tags.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @tags.each do |tag| %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold"><%= tag.name %></h2>
            <div class="flex items-center space-x-2">
              <%= link_to 'Edit', edit_tag_path(tag), class: 'text-blue-600 hover:text-blue-800' %>
              <%= link_to 'Delete', tag, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-800' %>
            </div>
          </div>

          <div class="mb-4">
            <div class="flex flex-wrap gap-2">
              <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded">
                <%= tag.name %>
              </span>
            </div>
          </div>

          <div class="text-sm text-gray-500">
            <span class="font-medium">Reports using this tag:</span> <%= tag.reports.count %>
          </div>
          <div class="text-sm text-gray-500 mt-1">
            <span class="font-medium">Created:</span> <%= time_ago_in_words(tag.created_at) %> ago
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-8 text-center">
      <p class="text-gray-500 mb-4">No tags yet. Create your first tag!</p>
      <%= link_to 'Create First Tag', new_tag_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% end %>
</div>
