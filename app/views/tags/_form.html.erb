<%= form_with(model: tag, local: true, class: "bg-white rounded-lg shadow-md p-6") do |form| %>
  <% if tag.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="font-bold">There were <%= pluralize(tag.errors.count, "error") %> that prevented this tag from being saved:</h2>
      <ul class="mt-2 list-disc list-inside">
        <% tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="flex justify-between mt-6">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    
    <% if tag.persisted? %>
      <%= link_to 'Cancel', tag, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    <% else %>
      <%= link_to 'Cancel', tags_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>
<% end %>
