<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">My Emotions</h1>

  <%= link_to 'New Emotion', new_emotion_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-8 inline-block' %>

  <% if @emotions.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @emotions.each do |emotion| %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold"><%= emotion.name %></h2>
            <div class="flex items-center space-x-2">
              <%= link_to 'Edit', edit_emotion_path(emotion), class: 'text-blue-600 hover:text-blue-800' %>
              <%= link_to 'Delete', emotion, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-800' %>
            </div>
          </div>

          <div class="mb-4">
            <div class="flex items-center space-x-2">
              <div class="w-4 h-4 rounded-full" style="background-color: <%= emotion.color %>"></div>
              <span class="text-gray-600">Color: <%= emotion.color %></span>
            </div>
          </div>

          <div class="text-sm text-gray-500">
            <span class="font-medium">Created:</span> <%= time_ago_in_words(emotion.created_at) %> ago
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-8 text-center">
      <p class="text-gray-500 mb-4">No emotions yet. Create your first emotion!</p>
      <%= link_to 'Create First Emotion', new_emotion_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% end %>
</div>
