<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Dashboard</h1>
    <p class="text-gray-600">Overview of your daily reports and emotional patterns</p>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-2">Total Reports</h3>
      <p class="text-3xl font-bold text-blue-600"><%= current_user.reports.count %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-2">Active Emotions</h3>
      <p class="text-3xl font-bold text-green-600"><%= current_user.reports.select(:emotion_id).distinct.count %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-2">Total Tags</h3>
      <p class="text-3xl font-bold text-purple-600"><%= current_user.reports.joins(:tags).select(:tag_id).distinct.count %></p>
    </div>
  </div>

  <!-- Charts Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Emotion Timeline Chart -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Emotion Timeline</h2>
      <div class="h-80">
        <%= line_chart @emotion_timeline_chart_data, {
          id: 'emotion-timeline-chart',
          height: '320px',
          colors: @emotion_colors.values,
          xtitle: 'Date',
          ytitle: 'Reports',
          library: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                position: 'bottom'
              }
            },
            scales: {
              x: {
                grid: { display: false }
              },
              y: {
                beginAtZero: true,
                grid: { color: '#f3f4f6' }
              }
            }
          }
        } %>
      </div>
    </div>

    <!-- Tag Distribution Chart -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Tag Distribution</h2>
      <div class="h-80">
        <%= pie_chart @tag_distribution_chart_data, {
          id: 'tag-distribution-chart',
          height: '320px',
          colors: ['#60A5FA', '#34D399', '#F472B6', '#F59E0B', '#818CF8', '#10B981', '#EF4444', '#F97316'],
          library: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                position: 'bottom'
              }
            }
          }
        } %>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8 bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Quick Actions</h2>
    <div class="flex flex-wrap gap-4">
      <%= link_to 'Create New Report', new_report_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'View All Reports', reports_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Manage Emotions', emotions_path, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Manage Tags', tags_path, class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .chart-container {
      position: relative;
      height: 100%;
    }
  </style>
<% end %>
