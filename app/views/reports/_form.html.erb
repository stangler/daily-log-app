  <div>
  <%= f.label :title, class: 'block text-sm font-medium text-gray-700 mb-1' %>
  <%= f.text_field :title, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
</div>

<div data-controller="markdown-preview">
  <%= f.label :content, class: 'block text-sm font-medium text-gray-700 mb-1' %>
  <%= f.text_area :content, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500', rows: 6, 'data-markdown-preview-target': 'input' %>
  <div data-markdown-preview-target="preview" class="bg-gray-50 p-4 rounded-md mt-4"></div>
</div>

<div>
  <%= f.label :emotion_id, class: 'block text-sm font-medium text-gray-700 mb-1' %>
  <%= f.collection_select :emotion_id, Emotion.order(:name), :id, :name, { include_blank: 'Select emotion' }, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
</div>

<div>
  <%= f.label :image, class: 'block text-sm font-medium text-gray-700 mb-1' %>
  <%= f.file_field :image, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
</div>

<div data-controller="tag-autocomplete" data-tag-autocomplete-tags-value="<%= Tag.pluck(:name).to_json %>">
  <%= f.label :tag_list, 'Tags (comma separated)', class: 'block text-sm font-medium text-gray-700 mb-1' %>
  <%= f.text_field :tag_list, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500', 'data-tag-autocomplete-target': 'input' %>
  <div data-tag-autocomplete-target="suggestions" class="bg-white border border-gray-300 rounded-md mt-1 shadow-lg max-h-48 overflow-y-auto"></div>
</div>

<div>
  <%= f.submit 'Create Report', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  <%= link_to 'Cancel', reports_path, class: 'text-gray-600 hover:text-gray-800 ml-4' %>
</div>
