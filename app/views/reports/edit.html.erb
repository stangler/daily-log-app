<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Edit Report</h1>

  <%= form_with model: @report, class: 'space-y-4' do |f| %>
    <% if @report.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h3><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h3>
        <ul>
          <% @report.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :title, class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.text_field :title, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div>
      <%= f.label :content, class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.text_area :content, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500', rows: 6 %>
    </div>

    <div>
      <%= f.label :emotion_id, class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.collection_select :emotion_id, Emotion.order(:name), :id, :name, { include_blank: 'Select emotion' }, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div>
      <%= f.label :image, class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.file_field :image, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <% if @report.image.attached? %>
      <div class="mb-4">
        <%= image_tag @report.image.variant(resize_to_limit: [200, 200]), class: 'rounded' %>
        <label class="text-sm text-gray-600">
          <%= f.check_box :remove_image %> Remove image
        </label>
      </div>
    <% end %>

    <div>
      <%= f.submit 'Update Report', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Cancel', @report, class: 'text-gray-600 hover:text-gray-800 ml-4' %>
    </div>
  <% end %>
</div>
